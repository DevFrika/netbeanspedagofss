<div class="section w3-clear " style="margin-top:-25%;clear:both;">
	<div class="row">
		<div id="sallelayout" class="col-lg-12 container-fluid tabs w3-animate-zoom w3-white" style="height:90%;width:100%;z-index:99;">

			<div class="row">
				<div class="col-md-12">
					<header class="w3-container w3-blue w3-padding">
							<a href="#" onclick="closeMenu(event, 'bodycontent')"  class="w3-btn btn w3-white tablink w3-left"><i class="glyphicon glyphicon-menu-left"></i> Retour </a>
					</header>
				</div>
			</div>
		
			<div class="row">
			
				<div class="col-lg-3">
					<!-- Sidenav/menu -->
					<nav class="w3-card-2 w3-animate-left w3-white" style="width:300px;position:static;">
						<div class="w3-container w3-row">
							<div class="w3-col s4">
								<h3 class="text-center"><b> <i class="material-icons w3-xlarge">class</i> salles </b></h3><br>
							</div>
						</div>
					  
						<ul class="nav nav-pills nav-stacked">
							<li><a href="#" class="tablinkw3-padding-hor-16 w3-hide-large w3-dark-grey w3-hover-black tablink" onclick="w3_close()" title="close menu"><i class="fa fa-remove"></i>Â  Close Menu</a></li>
							<li><a href="#" class="tablink" onclick="openSubTab(event, 'listesalle','sallelayout')"><i class="fa fa-users"></i> Liste des salles </a></li>
							<li><a href="#" class="tablink" onclick="openSubTab(event, 'listesalledep','sallelayout')"><i class="fa fa-users"></i> Liste des salles  par departements </a></li>
							<li><a href="#" class="w3-padding w3-blue tablink" data-toggle="modal" data-target="#addsalle" ><i class="glyphicon glyphicon-plus"></i> Ajouter une nouvelle salle </a></li>
						</ul>	
					</nav>
				</div>

				<div class="col-lg-9">
					<!-- Overlay effect when opening sidenav on small screens -->
					<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu"></div>


					<!-- !PAGE CONTENT! -->
					<div class="w3-main" style="margin-top:13px;">


						<div class="w3-container w3-left" >
							
		
							<div id="salleinfo" class="w3-container w3-section userinfo w3-animate-left">
									
								<h1> Info salles </h1>
							 
							</div>
								
							<div id="listesalle" class="tabs w3-container w3-section w3-animate-left">
								
								{% if allsalle is not null %}
						
								<div class="section">
									<div class="container">
										{% for salle in allsalle  %}
							
											<div class="fsssalle{{ salle.id }} col-md-6">
											 
											  <div class="col-md-4">
												<h3>{{ salle.salle }}</h3>
											
													<a class="btn btn-primary" data-toggle="modal" data-target="#salle{{ salle.id}}" > <i class="fa fa-eye"></i> Consulter </a>
													<a class="btn btn-primary w3-green tablink" onclick="openSubMenu(event, 'updatesalle{{ salle.id }}','modifsalle','sallelayout')"><i class="fa fa-pencil"></i>Modifier</a>
													<a class="btn btn-primary w3-red" data-toggle="modal" data-target="#delsalle{{ salle.id }}" ><i class="fa fa-trash"></i>Supprimer</a>
												
											  </div>
											</div>
											
										{%endfor%}

									</div>
								</div>
									
								{% else %}
								  <h1> Pas de salle </h1>
								{% endif %}
							
							
							</div>
							

								
							<div id="listesalledep" class="tabs w3-container w3-section w3-animate-left">
								
								{% if alldepartement is not null %}
							
								<div class="section">
									<div class="container">
										
										{% for salle in allsalle  %}
							
											<div class="fsssalle{{ salle.id }} col-md-6">
											 
											  <div class="col-md-4">
												<h3>{{ salle.salle }}</h3>
											
													<a class="btn btn-primary" data-toggle="modal" data-target="#salle{{ salle.id}}" > <i class="fa fa-eye"></i> Consulter </a>
													<a class="btn btn-primary w3-green tablink" onclick="openSubMenu(event, 'updatesalle{{ salle.id }}','modifsalle','sallelayout')"><i class="fa fa-pencil"></i>Modifier</a>
													<a class="btn btn-primary w3-red" data-toggle="modal" data-target="#delsalle{{ salle.id }}" ><i class="fa fa-trash"></i>Supprimer</a>
												
											  </div>
											</div>
											
										{%endfor%}
										
									</div>
								</div>
									
								{% else %}
								  <h1> Pas de salle </h1>
								{% endif %}
									
							</div>
								
								  
							</div>
						<!-- End page content -->
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


	